apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ overlay }}-app
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ gitops_repo_url }}
    targetRevision: HEAD
    path: applications/overlays/{{ overlay }}
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ overlay }}-namespace
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true

