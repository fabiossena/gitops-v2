apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: global-observability
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ gitops_repo_url }}
    targetRevision: main
    path: platform/global/observability
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: observability
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
    - CreateNamespace=true