apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ overlay }}-database-app
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ gitops_repo_url }}
    targetRevision: main
    path: platform/environments/overlays/{{ overlay }}/database
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: {{ overlay }}-database
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
    - CreateNamespace=true