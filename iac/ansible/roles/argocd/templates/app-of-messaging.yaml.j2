apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ overlay }}-observability-app 
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ gitops_repo_url }}
    targetRevision: main
    path: platform/environments/overlays/{{ overlay }}/observability
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: {{ overlay }}-namespace
  syncPolicy:
    automated:
      prune: true
      selfHeal: true      