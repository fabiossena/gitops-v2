apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: root-app
  namespace: {{ argocd_namespace }}
spec:
  project: default
  source:
    repoURL: {{ gitops_repo_url }}
    targetRevision: HEAD
    path: {{ gitops_repo_path }}
  destination:
    server: https://kubernetes.default.svc
    namespace: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
