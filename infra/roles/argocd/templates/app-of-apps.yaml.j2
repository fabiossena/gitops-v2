apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: main-app-{{ overlay }}
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ gitops_repo_url }}
    targetRevision: HEAD
    path: overlays/{{ overlay }}
  destination:
    server: https://kubernetes.default.svc
    namespace: main-namespace-{{ overlay }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true

